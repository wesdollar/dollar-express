    "cookie-session": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "dotenv-flow": "^3.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.14.0",
    "express-ws": "^5.0.2",
    "jest-pnp-resolver": "^1.2.2",
    "joi": "^17.4.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "mongodb": "^4.1.3",
    "node-fetch": "2.6.5",

  "devDependencies": {
    "@babel/core": "^7.18.9",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-typescript": "^7.15.0",
    "@jest/types": "^28.1.3",
    "@shelf/jest-mongodb": "^2.1.0",
    "@types/body-parser": "^1.19.1",
    "@types/cookie-session": "^2.0.43",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/dotenv-flow": "^3.2.0",
    "@types/express": "^4.17.13",
    "@types/faker": "^5.5.8",
    "@types/fs-extra": "^9.0.12",
    "@types/lodash": "^4.14.172",
    "@types/node": "^16.9.0",
    "@types/node-fetch": "^2.5.12",
    "@types/shelljs": "^0.8.9",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "@typescript-eslint/typescript-estree": "^4.31.0",
    "clipboardy": "^2.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-mdx": "^1.15.0",
    "eslint-plugin-prettier": "latest",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fs-extra": "^10.0.0",
    "glob": "^7.1.7",
    "husky": "^7.0.0",
    "jest": "^28.1.3",
    "jest-mock-extended": "^2.0.4",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.1",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "develop": "yarn fast-watch",
    "docker-build": "docker build --build-arg ARTIFACTORY_ADMIN_AUTH_TOKEN=$ARTIFACTORY_ADMIN_AUTH_TOKEN -t retailer-product-service .",
    "docker-develop": "nodemon -L --watch dist -e js,html dist/server.js",
    "docker-start": "docker run -it -p 34567:34567 retailer-product-service",
    "fast-watch": "nodemon -r dotenv-flow/config --watch src -e ts,html",
    "husky-init": "husky install",
    "sequalize-init": "yarn sequelize-cli db:migrate && yarn sequelize-cli db:seed:all",
    "start": "node dist/server.js",
    "test": "jest --watch",
    "test-coverage": "jest --coverage",
    "test-no-watch": "jest",
    "test-build": "run-p test-no-watch tsc",
    "test-db": "ts-node -r dotenv-flow/config src/db-helpers/db-test.ts",
    "tsc": "tsc",
    "tsc-watch": "tsc --watch"
  },
  "jestSonar": {
    "reportPath": "testresults",
    "reportFile": "test-report.xml",
    "indent": 4
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "public/**/*.{html,css,less,ejs}": [
      "prettier --write"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, html",
    "ignore": [
      "src/public"
    ]
  }
}
